{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-execute",
    "shell:allow-open",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "cors-fetch:default",
    "fs:write-all",
    "fs:read-all",
    "fs:allow-remove",
    "fs:allow-mkdir",
    "fs:allow-stat",
    "fs:scope",
    { "identifier": "fs:scope", "allow": ["**"] },
    { "identifier": "shell:default", "allow": [ { "cmd": "git", "name": "git", "args": [{ "validator": ".*" }] }, { "cmd": "cd", "name": "cd", "args": [{ "validator": ".*" }] } ] }
  ]
}
